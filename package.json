{
  "name": "phpinclude",
  "version": "1.2.1",
  "description": "Recursively resolve includes in php files",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cpiber/PHPInclude.git"
  },
  "main": "build/gulpfile.js",
  "scripts": {
    "prepare": "babel src -d build --extensions .ts --copy-files",
    "watch": "gulp watch",
    "build": "gulp build",
    "test": "cd src ; NODE_ENV=development gulp watch --cd ../test",
    "test2": "cd src ; NODE_ENV=development gulp watch --cd ../test --entry test2/index.php",
    "testbuild": "cd src ; NODE_ENV=production gulp build --cd ../test",
    "clean": "rm -rf build/"
  },
  "bin": {
    "phpinclude": "./cli.js"
  },
  "files": [
    "build/",
    "src/",
    "cli.js",
    "file.js",
    "file.ts",
    "global.js",
    "global.ts",
    "gulpfile.js",
    ".babelrc"
  ],
  "author": "cpiber",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-regenerator": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.4",
    "@types/gulp": "^4.0.6",
    "@types/gulp-watch": "^4.1.34",
    "@types/vinyl": "^2.0.4",
    "@types/webpack": "^4.41.21"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.4",
    "gulp": "^4.0.2",
    "gulp-watch": "^5.0.1",
    "memfs": "^3.2.0",
    "minimist": "^1.2.5",
    "minimist-options": "^4.1.0",
    "vinyl": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-merge": "^5.1.1"
  }
}
